<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".FreeSign">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:hint="Username"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/freename"/>

        <EditText
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:textColorHint="#fff"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:hint="phone"
            android:paddingLeft="20dp"
            android:maxEms="10"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/freephone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Email"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/freemail"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/freepass"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:id="@+id/freecpass"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/freespin"
            android:textColorHint="#fff"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:text="Continue"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/freecont"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/second"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/freeotp"
        android:textColor="#fff"
        android:textColorHint="#fff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/submit"
        android:paddingTop="20dp"
        android:id="@+id/freesubmit"
        android:background="#fff"
        android:layout_marginHorizontal="20dp"/>
</LinearLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>